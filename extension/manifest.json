{
  "manifest_version": 2,

  "name": "FTLabs Cpp Widget",
  "description": "A Chrome Extension that automagically adds a cpp analysis widget.",
  "version": "2.3.0",
  "permissions": [
    "tabs",
    "activeTab",
    "identity",
    "identity.email"
  ],
  "web_accessible_resources": [
    "images/*.png"
  ],
  "browser_action": {
    "default_icon": "./icon.png",
    "default_popup": "dialog.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/main.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  }
}
